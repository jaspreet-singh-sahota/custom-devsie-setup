<h2>Log in</h2>


<%= form_with(scope: :session, url: user_session, local: true) do |f| %>
        <div>
          <%= f.label :username %>
          <div class="col-10"> 
            <%= f.text_field :username, placeholder: "Enter your username address" %>
          </div>
        </div>

        <div>
          <%= f.submit "Log in" %>
        </div>
      <% end %>



<%= render "devise/shared/links" %>
